{% extends 'admin/layout/base.html.twig' %}

{% block title %}Nuevo módulo - {{ getCompany().name|default('Nonamed') }}{% endblock %}

{% block sidebarMenu %}
    {% set section, page = 'course', 'courseIndex' %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="page-header">
        <h1 class="page-title text-primary-d2">
            Crear nuevo módulo para {{ module.course.title }}
        </h1>    
            
        <div class="page-tools">
            <a href="{{ path('course_show', {'id': module.course.id, 'tab': 'modules'}) }}">Volver al curso</a>
        </div>
    </div>

    <div class="h-1 my-1"></div>
        
    {{ include('admin/course/module/_form.html.twig') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }} 
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <script type="text/javascript" src="/js/admin/courseForm.js"></script> 
{% endblock %}