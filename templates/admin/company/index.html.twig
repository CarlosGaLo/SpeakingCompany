{% extends 'admin/layout/base.html.twig' %}

{% block title %}Administración - {{ getCompany().name|default('Nonamed') }}{% endblock %}

{% block sidebarMenu %}
    {% set section, page = 'admin', 'companyIndex' %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/basictable/jquery.basictable.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/sweetalert2/dist/sweetalert2.all.min.js"></script>    
{% endblock %}

{% block body %}
    <div class="page-header">
        <h1 class="page-title text-primary-d2">
            Empresa
            <small class="page-info text-secondary-d2">
                <i class="fa fa-angle-double-right text-80"></i>
                Datos generales
            </small>
        </h1>

        <div class="page-tools">
            <a href="{{ path('company_edit', {'id':company.id}) }}" class="btn btn-sm btn-info">
                <i class="fa fa-building text-100"></i> &nbsp;Editar empresa
            </a>

        </div>
    </div>           

    <div class="h-1 my-1"></div>

    <div class="row">
        <div class="col-12">
            <div class="bgc-white px-1 bo1rder-1 brc-secondary-l2 radius-1">
                <table class="table table table-striped-info table-borderless">
                    <tbody><tr>
                            <td><i class="fa fa-user text-success-l1"></i></td>
                            <td class="text-95 text-default-d3">Nombre comercial</td>
                            <td class="text-secondary-d2">{{ company.name }}</td>
                        </tr>
                        <tr>
                            <td><i class="fa fa-envelope text-blue-m3"></i></td>
                            <td class="text-95 text-default-d3">Email</td>
                            <td class="text-secondary-d2 text-wrap"><a href="mailto:{{ company.email }}">{{ company.email }}</a></td>
                        </tr>
                        <tr>
                            <td><i class="fa fa-phone text-purple-m3"></i></td>
                            <td class="text-95 text-default-d3">Teléfono</td>
                            <td class="text-secondary-d2"><a href="mailto:{{ company.phone }}">{{ company.phone }}</a></td>
                        </tr> 
                        {#<tr>
                            <td><i class="fa fa-twitter-square text-purple-m3"></i></td>
                            <td class="text-95 text-default-d3">Twitter</td>
                            <td class="text-secondary-d2"><a href="{{ company.twitter }}">{{ company.twitter }}</a></td>
                        </tr>
                        <tr>
                            <td><i class="fa fa-facebook-f text-purple-m3"></i></td>
                            <td class="text-95 text-default-d3">Facebook</td>
                            <td class="text-secondary-d2"><a href="{{ company.facebook }}">{{ company.facebook }}</a></td>
                        </tr>#}
                    </tbody>
                </table>
            </div>
              
            <div class="text-center">
                <br>
                <a href="{{ path('company_edit', {'id':company.id}) }}" class="btn btn-sm btn-info">
                    <i class="fa fa-building text-100"></i> &nbsp;Editar empresa
                </a>
            </div>
            
        </div>              
    </div>            
{% endblock %}